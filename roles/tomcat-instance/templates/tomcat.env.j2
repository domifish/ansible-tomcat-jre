# Version du moteur
CATALINA_HOME="{{ tomcat_base_dir }}/default"

# Repertoire de l'instance
CATALINA_BASE="{{ instance_dir }}"

# Choix de la JVM
JAVA_HOME="{{ tc_jre_dir }}/default"

#Parametre de la gestion memoire de la JVM
CATALINA_OPTS="-Xms{{ xms }}m -Xmx{{ xmx }}m -server -XX:+UseParallelGC -Djava.awt.headless=true"

#  configuration des applications
APP_OPTS="-Dspring.config.location={{ tomcat_conf_dir }}/apps/{{ inst }} -Dspring.profile.active={{ env_dev }}"

#  configuration des logs
LOG_OPTS="-Doney.logging.path=/var/log/tomcat/apps/{{ inst }}"

#Parametre JMX pour le monitoring
JMX_OPTS="-Dcom.sun.management.jmxremote.port={{ jmx_port }} -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.authenticate=true -Dcom.sun.management.jmxremote.access.file={{ tomcat_conf_dir }}/instances/{{ inst }}/security/jmx.access -Dcom.sun.management.jmxremote.password.file={{ tomcat_conf_dir }}/instances/{{ inst }}/security/jmx.password"

#Parametre pour le monitoring
MON_OPTS="-verbose:gc -XX:+PrintGC -XX:+PrintGCDetails -XX:+PrintGCTimeStamps -XX:+PrintHeapAtGC"

JAVA_OPTS="$APP_OPTS $LOG_OPTS $JMX_OPTS $MON_OPTS"
